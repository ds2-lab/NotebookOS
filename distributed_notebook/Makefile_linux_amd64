
include ../env.mk

build-smr-linux-amd64:
	@echo "Building '_smr.cpython-311-x86_64-linux-gnu.so' for Linux AMD64"
	@echo "PYTHON3_INCLUDES_PATH: \"$(PYTHON3_INCLUDES_PATH)\""
	@echo "PYTHON3_LIB_PATH: \"$(PYTHON3_LIB_PATH)\""
	export CGO_CFLAGS="-I$(PYTHON3_INCLUDES_PATH) -ggdb3 -fPIC -Wall -O0"
	export CGO_LDFLAGS="-L$(PYTHON3_LIB_PATH) -ggdb3 -lpython3.11d -lcrypt -lpthread -ldl -lutil -lm"
	go build -mod=mod -buildmode=c-shared -buildvcs=false -gcflags=all="-N -l" -o _smr.cpython-311-x86_64-linux-gnu.so .